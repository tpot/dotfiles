[
    // Shift-Cmd-B runs default build task so it makes sense that
    // we should have Shift-Command-T runs the default test task
    {
        "key": "shift+cmd+t",
        "command": "workbench.action.tasks.test",
        "when": "editorTextFocus"
    },
    // Some Emacs-esque key bindings whos lack irritates me
    {
        "key": "escape backspace",
        "command": "deleteWordLeft",
        "when": "textInputFocus"
    },
    {
        "key": "escape f",
        "command": "cursorWordRight",
        "when": "textInputFocus"
    },
    {
        "key": "escape b",
        "command": "cursorWordLeft",
        "when": "textInputFocus"
    },
    {
        "key": "escape shift+.",
        "command": "cursorBottom",
        "when": "textInputFocus"
    },
    {
        "key": "escape shift+,",
        "command": "cursorTop",
        "when": "textInputFocus"
    },
    // Paredit wrap around using keys they wrap
    // e.g wraparound parens with '(' instead of 'P'
    {
        "key": "shift+alt+9",
        "command": "paredit.wrapAroundParens",
        "when": "calva:keybindingsEnabled && editorTextFocus && editorLangId == 'clojure'"
    },
    {
        "key": "alt+[",
        "command": "paredit.wrapAroundSquare",
        "when": "calva:keybindingsEnabled && editorTextFocus && editorLangId == 'clojure'"
    },
    {
        "key": "shift+alt+'",
        "command": "paredit.wrapAroundQuote",
        "when": "calva:keybindingsEnabled && editorTextFocus && editorLangId == 'clojure'"
    },
    {
        "key": "shift+alt+[",
        "command": "paredit.wrapAroundCurly",
        "when": "calva:keybindingsEnabled && editorTextFocus && editorLangId == 'clojure'"
    }
]
