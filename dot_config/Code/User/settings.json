{
    // Don't show ignored files in Explorer window
    "explorer.excludeGitIgnore": true,

    // Don't send off stuff to Microsoft
    "telemetry.enableTelemetry": false,

    // Define tags used by AWS CloudFormation templates
    "yaml.customTags": [
        "!And scalar",
        "!If scalar",
        "!Not",
        "!Equals scalar",
        "!Or scalar",
        "!FindInMap scalar",
        "!Base64",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!GetAtt sequence",
        "!GetAZs",
        "!ImportValue sequence",
        "!Select sequence",
        "!Split sequence",
        "!Join sequence"
    ]
}
