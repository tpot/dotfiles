{
    // Don't show ignored files in Explorer window
    "explorer.excludeGitIgnore": true,

    // Autosave a file when focus moves away from it
    "files.autoSave": "onFocusChange",

    // My personal whitespace settings: trim trailing whitespace on save,
    // insert a final newline at EOF but don't show in the editor.
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.renderFinalNewline": "off",

    // Don't send off stuff to Microsoft
    "telemetry.telemetryLevel": "off",

    // Define tags used by AWS CloudFormation templates
    "yaml.customTags": [
        "!And",
        "!If",
        "!Not",
        "!Equals",
        "!Or",
        "!FindInMap sequence",
        "!Base64",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Join sequence"
    ],

    // SQL
    "[sql]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "dorzey.vscode-sqlfluff"
    },

    "sqlfluff.executablePath": "${userHome}/.local/bin/sqlfluff",
    "sqlfluff.dialect": "duckdb",
    "sqlfluff.linter.run": "onType",
    "sqlfluff.format.enabled": true,
    "sqlfluff.experimental.format.executeInTerminal": false,

    // Word wrapping
    "editor.wordWrapColumn": 75,

    "rewrap.autoWrap.enabled": true,
    "rewrap.autoWrap.notification": "text",

    // Markdown
    "[markdown]": {
        "rewrap.autoWrap.enabled": false,
        "editor.wordWrap": "on"
    },

    // YAML schema definitions
    "yaml.schemas": {
        "https://raw.githubusercontent.com/canonical/cloud-init/main/cloudinit/config/schemas/versions.schema.cloud-config.json": [
            "userdata{,-*}.{yml,yaml}"
        ]
    },

    // Filename associations
    "files.associations": {
        "*.md": "markdown"
    },

    "files.exclude": {
        "**/.gitkeep": true
    },

    "editor.minimap.enabled": false,
    "direnv.restart.automatic": true
}
